<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <com.kaidongyuan.app.basemodule.widget.SlidingTitleView
        android:id="@+id/slidingtilte_activity_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/listview_item_paddingright"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="头像："
            android:textSize="@dimen/text_size_bigger"
            android:layout_gravity="center_vertical"
            />
         <ImageView
             android:id="@+id/iv_user_icon"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/head_icon"
             android:scaleType="fitXY"
             android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/listview_item_paddingright"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textSize="@dimen/text_size_bigger"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无数据"
            android:textSize="@dimen/text_size_bigger"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/listview_item_paddingright"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="公司名称："
            android:textSize="@dimen/text_size_bigger"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_COMPANYNAME"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无数据"
            android:textSize="@dimen/text_size_bigger"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/listview_item_paddingright"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="车队名称："
            android:textSize="@dimen/text_size_bigger"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_FLEETTYPE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无数据"
            android:textSize="@dimen/text_size_bigger"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/listview_item_paddingright"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:textSize="@dimen/text_size_bigger"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无数据"
            android:textSize="@dimen/text_size_bigger"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/listview_item_paddingright"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账户类型："
            android:textSize="@dimen/text_size_bigger"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_user_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无数据"
            android:textSize="@dimen/text_size_bigger"
            android:gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/listview_item_paddingright"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="常住地址："
            android:textSize="@dimen/text_size_bigger"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_ADDRESS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="无数据"
            android:textSize="@dimen/text_size_bigger"
            android:gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>

    <Button
        android:id="@+id/bt_UpdateUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_long_btn_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="更\t改\t个\t人\t信\t息"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/bt_UpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_small_selector"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="修\t改\t密\t码"
        android:textColor="@color/white"
        />

</LinearLayout>