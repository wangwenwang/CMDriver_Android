<?xml version="1.0" encoding="utf-8"?>
<layout >
<data>
 <variable
     name="model"
     type="com.chenmaunion.app.cmdriver.viewmodel.DBModel_Main"/>
</data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.IDX}"
            android:textSize="@dimen/text_size_normal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/listview_item_paddingbottom"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.USER_NAME}"
            android:textSize="@dimen/text_size_normal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/listview_item_paddingbottom"
            android:onClick="@{model.onIDXClick}"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.USER_CODE}"
            android:textSize="@dimen/text_size_normal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/listview_item_paddingbottom"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.USER_TYPE}"
            android:textSize="@dimen/text_size_normal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/listview_item_paddingbottom"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_databing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/listview_item_paddingleft"
            android:paddingTop="@dimen/listview_item_paddingtop"
            android:paddingRight="@dimen/listview_item_paddingright"
            android:paddingEnd="@dimen/listview_item_paddingbottom"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</layout>