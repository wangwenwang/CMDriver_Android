<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_normal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="车\t源\t库\t找\t车"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="@color/cm_yellow"
        android:textSize="16sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/track_text"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号码："
            />
        <EditText
            android:id="@+id/ed_Truck_Number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="\t必填"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/bt_dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="返\t\t回"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg_small_selector"
            />
        <Button
            android:id="@+id/bt_dialog_comfit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:text="确\t\t认"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/blue_long_btn_bg"
            />
    </LinearLayout>
</LinearLayout>