<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_addtruck"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <com.kaidongyuan.app.basemodule.widget.SlidingTitleView
        android:id="@+id/slidingtilte_activity_addtruck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_paddingleft"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请填写您的真实信息以便货主校对，感谢配合！"
                android:textColor="@color/yb_yellow"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_bigger"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="车牌号："
                        android:textColor="@color/details_text"
                        android:textSize="13sp" />
                    <EditText
                        android:id="@+id/ed_truck_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="粵A*****"
                        android:textSize="13sp"
                        android:textColor="@color/red"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="车辆类型："

                        android:textColor="@color/details_text"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/ed_truck_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="厢式/带卡板/**"
                        android:textColor="@color/red"
                        android:textSize="13sp" />
                    <!--<TextView-->
                    <!--android:id="@+id/tv_tms_fleet_name"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->

                    <!--android:background="@null"-->
                    <!--android:ellipsize="marquee"-->
                    <!--android:focusable="true"-->
                    <!--android:focusableInTouchMode="true"-->
                    <!--android:marqueeRepeatLimit="marquee_forever"-->
                    <!--android:singleLine="true"-->
                    <!--android:text=""-->
                    <!--android:textColor="@color/red"-->
                    <!--android:textSize="13sp" />-->
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="品牌型号："
                        android:textColor="@color/details_text"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/ed_truck_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="江铃/**"
                        android:textColor="@color/red"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="车辆尺寸："
                        android:textColor="@color/details_text"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/ed_truck_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="**.*m"
                        android:textColor="@color/red"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="车辆颜色："
                        android:textColor="@color/details_text"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/ed_truck_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="蓝/白/**"
                        android:textColor="@color/red"
                        android:textSize="13sp" />


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="最大载重："
                        android:textColor="@color/details_text"
                        android:textSize="13sp" />
                    <EditText
                        android:id="@+id/ed_truck_maxwight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="**（吨）"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"
                        android:textColor="@color/red"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="最大装运量："
                        android:textColor="@color/details_text"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/ed_truck_maxvolume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="**（立方）"
                        android:inputType="numberDecimal"
                        android:textColor="@color/red"
                        android:textSize="13sp" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imageView_picture0"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_imageview_default_bg"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/tv_picture0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:text="行驶证正面"
                        android:padding="@dimen/title_paddingleft"
                        android:textColor="@color/white"
                        android:background="@drawable/blue_long_btn_bg"
                        android:textSize="@dimen/text_size_bigger"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <ImageView
                        android:id="@+id/imageView_picture1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_imageview_default_bg"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/tv_picture1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:text="行驶证反面"
                        android:padding="@dimen/title_paddingleft"
                        android:textColor="@color/white"
                        android:background="@drawable/blue_long_btn_bg"
                        android:textSize="@dimen/text_size_bigger"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imageView_picture2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_imageview_default_bg"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/tv_picture2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:text="车头牌照"
                        android:padding="@dimen/title_paddingleft"
                        android:textColor="@color/white"
                        android:background="@drawable/blue_long_btn_bg"
                        android:textSize="@dimen/text_size_bigger"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:text="温馨提示："
                        android:textSize="@dimen/text_size_bigger"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:text="1、请上传真实清晰的照片，以提供审核备案。"
                        android:padding="@dimen/title_paddingleft"
                        android:textSize="@dimen/text_size_bigger"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:text="2、请在网络良好的情况下，按要求的顺序完整上传车辆信息"
                        android:padding="@dimen/title_paddingleft"
                        android:textSize="@dimen/text_size_bigger"
                        />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_truck_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg_small_selector"
                android:text="确\t认\t添\t加"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_bigger"
                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>