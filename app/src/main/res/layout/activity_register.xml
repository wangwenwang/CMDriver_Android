<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   >
    <data>
        <variable
            name="model"
            type="com.chenmaunion.app.cmdriver.viewmodel.DBModel_Register"
            />

    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/track_bg"
    >
    <com.kaidongyuan.app.basemodule.widget.SlidingTitleView
        android:id="@+id/slidingtitelView_RegisterActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:drawableLeft="@drawable/icon_notify"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入帐号（手机号）"
        android:inputType="phone"
        android:text="@={model.obPhone}"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:orientation="horizontal">
        <EditText
            android:drawableLeft="@drawable/icon_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入短信验证码"
            android:text="@={model.obVerification}"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_long_btn_bg"
            android:hint="获取"
            android:onClick="@{model.onCheckClick}"
            />
    </LinearLayout>
    <EditText
        android:drawableLeft="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请设置登录密码"
        android:inputType="numberPassword"
        android:text="@={model.obPassword0}"
        />
    <EditText
        android:drawableLeft="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="请再输入一次密码"
        android:text="@={model.obPassword1}"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">
    <TextView
        android:drawableLeft="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择角色："
        />
        <Spinner
           android:id="@+id/spinner_usertype"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"></Spinner>
</LinearLayout>

    <EditText
        android:drawableLeft="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入真实姓名"
        android:text="@={model.obName}"
        />
    <EditText
        android:drawableLeft="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请选择常住地址"
        android:text="@={model.obAddress}"
        />
    <EditText
        android:drawableLeft="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入公司名称"
        android:text="@={model.obCompanyName}"
        android:inputType="phone"
        />
    <EditText
        android:drawableLeft="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入车队编号（如有）"
        android:text="@={model.obMotorcade}"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="申\t请\t注\t册"
        android:background="@drawable/btn_bg_small_selector"
        android:onClick="@{model.onRegisterClick}"
        />
</LinearLayout>
</layout>